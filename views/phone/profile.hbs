<script src="{{scripts.profile}}" hidden></script>
<div class="sixteen wide column">

    <!-- Dashboard -->
    <div class="ui segment">

        <!-- Bookings -->
        <h3 class="ui dividing header">My Bookings</h3>

        <div class="ui loading placeholder segment" id="bookings_calendar"></div>

        <div class="ui loading placeholder segment" id="bookings_list"></div>



        <!-- Trips -->
        <h3 class="ui dividing header">My Trips</h3>

        {{#if member.trips.length}}

        <div class="ui items">

            {{#each member.trips}}

            <a class="ui fluid link card" href="/trip/{{this.tripId}}" target="_blank" style="color: black;">
                <div class="content">
                    <div class="header">
                        <div class="ui left floated">{{this.tripName}}</div>
                        <div class="ui right floated">Minimum Level: {{this.skillLevel}}</div>
                    </div>
                    <h5>From {{this.startDate}} to {{this.endDate}}</h5>
                </div>
            </a>

            {{/each}}

        </div>

        {{else}}

        <div class="ui fitted segment" id="trips">
            <div class="ui fluid placeholder segment">
                <div class="ui icon header">
                    <i class="map icon"></i>
                    You have not been on any trips yet!
                </div>
            </div>
        </div>

        {{/if}}



        <!-- Qualifications -->
        <h3 class="ui dividing header">My Qualifications</h3>

        {{#if member.certs.length}}

        <div class="ui items">

            {{#each member.certs}}
            <a class="ui fluid link card" href="{{this.link}}" target="_blank" style="color: black;">
                <div class="content">
                    <div class="header">{{this.certName}}</div>
                    <div class="header" style="font-size: small;">{{this.category}} Certificate</div>
                    <h5>This certificate shows the owner is able to:</h5>
                    <ol class="ui list">
                        {{#each this.aims}}
                        <li value="-">{{this}}</li>
                        {{/each}}
                    </ol>
                </div>
            </a>
            {{/each}}

        </div>

        {{else}}

        <div class="ui fitted segment" id="certs">
            <div class="ui fluid placeholder segment">
                <div class="ui icon header">
                    <i class="graduation cap icon"></i>
                    You do not have any qualifications yet!
                </div>
            </div>
        </div>

        {{/if}}
    </div>

    {{#if committee}}{{> committee}}{{/if}}

    {{#if admin}}{{> admin}}{{/if}}

    {{#if captain}}{{> captain}}{{/if}}

    {{#if vice}}{{> vice}}{{/if}}

    {{#if safety}}{{> safety}}{{/if}}

    {{#if treasurer}}{{> treasurer}}{{/if}}

    {{#if equipments}}{{> equipments}}{{/if}}

    {{#if pro}}{{> pro}}{{/if}}

    {{#if freshers}}{{> freshers}}{{/if}}

</div>