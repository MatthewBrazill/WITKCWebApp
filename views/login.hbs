<div class="twelve wide column">
    <div class="ui centered grid">
        <div class="eight wide column">
            <div class="ui segment">
                <h1 class="ui center aligned header">Please Log-In</h1>
                <script src="{{login_validator}}"></script>
                <form class="{{#if login_failed}}ui error form{{else}}ui form{{/if}}" action="/login" method="post"
                    onsubmit="checkLogin(this)">
                    <div class="field">
                        <input type="text" name="username" placeholder="Username">
                    </div>
                    <div class="field">
                        <input type="password" name="password" placeholder="Password">
                    </div>
                    <div class="ui error message">
                        <div class="header">Login Failed!</div>
                        <p>The given username or password are incorrect!</p>
                    </div>
                    <button class="fluid ui gray button" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>