<script src="{{scripts.captain}}" hidden></script>
<div class="ui segment">

    <h3 class="ui dividing header">Equipments Dashboard</h3>

    <div class="ui divided grid">

        <div class="ui twelve wide column">

            {{#if equipments.equipment.length}}

            <div class="ui items">

                {{#each equipments.equipment}}

                <div class="item">
                    <div class="header">{{this.name}}</div>
                    <div class="ui two column grid">
                        <div class="twelve wide column"></div>
                        <div class="four wide column"></div>
                        <div class="ui vertical divider"></div>
                    </div>
                </div>

                {{/each}}

            </div>

            {{else}}

            <div class="ui fluid placeholder segment">
                <div class="ui icon header">
                    <i class="exclamation icon"></i>
                    There is no Equipment Registered
                </div>
            </div>

            {{/if}}
        </div>

        <div class="ui four wide column">

            <button class="ui fluid teal button" onclick="$('announcement_modal').show()">
                <h4 class="ui center aligned icon header">
                    <i class="large announcement icon"></i>
                    Announcement
                </h4>
            </button>

            <br>

            <button class="ui fluid teal button" id="add_equipment">
                <h4 class="ui center aligned icon header">
                    <i class="large plus icon"></i>
                    Add Equipment
                </h4>
            </button>

            <div class="ui modal" id="add_equipment_modal">

                <div class="header">Award Certificate to Member</div>

                <div class="content">

                    <form class="ui form" id="add_equipment_modal_form">


                        <div class="ui error message">
                            <div class="header">
                                There was an error connecting to the server. Please reload the page and try again!
                            </div>
                        </div>
                    </form>
                </div>

                <div class="right aligned actions">
                    <button class="ui negative button" id="add_equipment_modal_cancel">Cancel</button>
                    <button class="ui positive button" id="add_equipment_modal_confirm">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>