<script src="{{scripts.captain}}" hidden></script>
<div class="ui segment">
    <h3 class="ui dividing header">Captain Dashboard</h3>

    <div class="ui two column grid">

        <div class="ui twelve wide column">

            {{#if captain.verificationRequests.length}}

            <div class="ui cards">

                {{#each captain.verificationRequests}}

                <div class="ui fluid link card expenseRequest" id="{{this.requestId}}">
                    <div class="content">
                        <div class="header">
                            <div class="ui left floated">{{this.member.firstName}} {{this.member.lastName}}</div>
                            <div class="ui right floated buttons">
                                <div class="ui negative icon button"><i class="trash icon"></i></div>
                                <div class="ui positive icon button"><i class="check icon"></i></div>
                            </div>
                        </div>
                    </div>
                </div>

                {{/each}}

            </div>

            {{else}}

            <div class="ui fluid placeholder segment">
                <div class="ui icon header">
                    <i class="check double icon"></i>
                    No pending verifications!
                </div>
            </div>

            {{/if}}
        </div>

        <div class="ui four wide column">
            <div class="ui teal statistic">
                <div class="value" id="captain_members_stat">0</div>
                <div class="label">Club Members</div>
            </div>
            <div class="ui teal statistic">
                <div class="value" id="captain_trips_stat">0</div>
                <div class="label">Trips This Year So Far</div>
            </div>
            <div class="ui teal statistic">
                <div class="value" id="captain_boats_stat">0</div>
                <div class="label">Club Boats</div>
            </div>
            <button class="ui fluid teal button announcement_button">
                <h4 class="ui center aligned icon header">
                    <i class="large announcement icon"></i>
                    Announcements
                </h4>
            </button>
        </div>
    </div>
</div>